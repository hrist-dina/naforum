include data

include ../select/index
include ../footer/index

mixin calendar(checkboxList, showCalendar=false)
    .calendar.js-calendar(class=showCalendar ? 'show' : '')
        form
            .container
                .calendar__top
                    .calendar__date
                        a(href="#").calendar__prev.js-datepicker-prev
                        .calendar__month.js-datepicker-title
                        a(href="#").calendar__next.js-datepicker-next
                    .calendar__controll.js-calendar-show
                        span.calendar__expand Развернуть
                        span.calendar__roll-up Свернуть

            .calendar__wrap.js-calendar-wrap
                +select(select.options, 'js-select2-bunting', select.label)
                input(type='hidden').js-datepicker.js-calendar-scroll

                .container
                    .calendar__filter-wrap
                        .calendar__title Выберите направление
                        ul.calendar__filter-list
                            for item in checkboxList.direction
                                li
                                    label.input-checkbox-color
                                        input(id='checkbox-' + item.color, type='checkbox')
                                        span(class=item.color)=item.label
                        .calendar__title.calendar__mt-30 Выберите тип
                        ul.calendar__filter-list
                            for item in checkboxList.type
                                li
                                    label.input-checkbox
                                        input(type='checkbox')
                                        span=item.label
                    button(type='submit', class='button calendar__mt-30') Применить
        .calendar__menu
            .container
                //a(href='javascript:void(0)', class='button calendar__mt-10') Добавить событие
                //
                //.auth
                //    a.auth__login.js-modal-open(href='#', data-modal-type="login") Вход на сайт
                //    a.auth__login.js-modal-open(href='#', data-modal-type="register") Регистрация

                form.modal-search(action="" method="")
                    input.modal-search__input(name='email', type='text', placeholder='Поиск по сайту')
                    button.modal-search__submit(type="submit")
        +footer(true)








